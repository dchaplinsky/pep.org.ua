{% extends "base.jinja" %}

{% block body_class %}front{% endblock %}

{% block extra_menu %}
    {% if request.user.is_superuser %}
        <li>
            <a href="{{ url('wagtailadmin_pages_edit', page.id) }}" target="_blank">[{{ _("Редагувати") }}]</a>
        </li>
    {% endif %}
{% endblock %}

{% block mini_search %}
{% endblock %}

{% block content %}
    <section id="searchbox" class="">
        <div class="container">
            <div class="row">
                <h1 class="text-center">{{ page.title }}</h1>
                <p class="text-center">{{ page.body|richtext }}</p>

                <div class="col-lg-6 col-md-8 col-xs-12 col-lg-offset-3 col-md-offset-2">
                    <form action="{{ url("search") }}" method="GET">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="{{ _("Введіть ім'я") }}" name="q" data-provide="typeahead" id="search-form" autocomplete="off" />
                            <input type="hidden" name="is_exact" value="" />
                            <span class="input-group-btn"><button class="btn btn-danger" type="submit">{{ _("Перевірити") }}</button></span>
                        </div>
                    </form>
                    <!-- /input-group --> 
                </div>
            </div>
        </div>
    </section>
    

    {% if banners %}
    <selection id="sponsors">
        <div class="container">
            <div class="row">
                {% for banner in banners %}
                    {% if banner.image %}
                    <div class="sponsor text-center col-md-3 col-xs-6">
                        <a href="{{ banner.link }}" target="_blank">
                        <img src="{{ banner.image.get_rendition("original").url }}" alt="{{ banner.caption }}" class="img-responsive mc"
                        title="{{ banner.caption }}"/>
                        </a>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </selection>
    {% endif %}

    <div class="cp"></div> <!--   clear padding  -->
{% endblock %}