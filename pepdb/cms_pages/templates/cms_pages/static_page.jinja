{% extends "base.jinja" %}

{% block extra_menu %}
    {% if request.user.is_superuser %}
        <li class="edit-page">
            <a href="{{ url('wagtailadmin_pages:edit', page.id) }}" target="_blank"><i class="fa fa-pencil-square-o"></i></a>
        </li>
    {% endif %}
{% endblock %}

{% block page_title %}{{ page.translated_title }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div id="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="{{ url("wagtail_serve", "") }}">{{ _("Головна") }}</a></li>
                <li class="active">{{ page.translated_title }}</li>
            </ol>
        </div>
        <section id="profile" class="col-lg-8">
            <div class="page-content">
                <h1>{{ page.translated_title }}</h1>
                <div class="content-body">
                    {{ page.translated_body|richtext }}
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}