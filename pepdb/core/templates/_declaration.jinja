                    <tr>
                        <th class="decl-year">{{ _("Рік") }}</th>
                        <th class="decl-position">{{ _("Посада") }}</th>
                        <th class="decl-income">{{ _("Доходи декларанта") }}, {{ _("UAH") }}</th>
                        <th class="decl-familyincome">{{ _("Доходи родини") }}, {{ _("UAH") }}</th>
