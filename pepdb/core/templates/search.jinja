{% extends "base.jinja" %}

{% block content %}
<div class="container">
    <div class="row">

        <div id="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Головна</a></li>
                <li><a href="#">Результати пошуку</a></li>
                <li class="active">Публічні діячі</li>
            </ol> 
        </div>

        <section id="search-results">
            {% if persons %}
                <h2 class="text-center">Фізичні особи</h2>
                {% for p in persons %}
                <div class="small-profile fizik col-sm-6">
                <a href="{{ url("person_details", person_id=p.id) }}">
                    <div class="box">
                        <header class="profile-header">

                        <div class="avatar">
                        {% if p.photo %}
                            <img src="{{ p.photo|thumbnail_url("small_avatar") }}"/>
                        {% endif %}
                        </div>

                            <h3 class="pep-name">
                                {{ p.last_name }}<span class="pep-pib">{{ p.first_name }} {{ p.patronymic }}</span>
                            </h3>
                        </header>

                        <div class="descr">
                            <p><span>Дата рождения:</span> 10.05.1981</p>
                            <p><span>Последнее место работы:</span> Секретар РНБО України</p>
                            <p><span>Рівень ризику:</span>  <span class="riskLevel">пиздец</span><span class="riskLevel tip"> Какой-то пояснительный текст что-это означает и чтобы всем вообще было понятно</span></p>
                            <p><span>Место работы:</span> РайкопГоспромСельхоз производственное управление</p>
                        </div>
                    </div>
                </a>
                </div>
                {% if loop.index is divisibleby 2 %}
                    <div class="clearfix"></div>
                {% endif %}
                {% endfor %}
                
                <div class="text-center">
                    <nav>
                          <ul class="pagination">
                            <li><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                          </ul>
                    </nav>
                </div>
            {% endif %}


            {% if related_persons %}
            <h2 class="text-center">Пов'язані особи</h2>

                {% for p in related_persons %}
                <div class="small-profile linked col-sm-6">
                    <a href="{{ url("person_details", person_id=p.id) }}">
                        <div class="box">
                            <header class="profile-header">
                                <div class="avatar">
                                </div>
                                <h3 class="pep-name">
                                    {{ p.last_name }}<span class="pep-pib">{{ p.first_name }} {{ p.patronymic }}</span>
                                </h3>
                            </header>
    
                            <div class="descr">
                                <p><span>Дата рождения:</span> 10.05.1981</p>
                                <p><span>Последнее место работы:</span> Секретар РНБО України</p>
                                <p><span>Рівень ризику:</span>  <span class="riskLevel">пиздец</span><span class="riskLevel tip"> Какой-то пояснительный текст что-это означает и чтобы всем вообще было понятно</span></p>
                                <p><span>Место работы:</span> РайкопГоспромСельхоз производственное управление</p>
                                <P><span>Связь:</span> Супруга, Сергей Клюев.</p>
                            </div>
                        </div>
                    </a>
                </div>
                {% if loop.index is divisibleby 2 %}
                    <div class="clearfix"></div>
                {% endif %}
                {% endfor %}
                
                <div class="text-center">
                    <nav>
                          <ul class="pagination">
                            <li><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                          </ul>
                    </nav>
                </div>
            {% endif %}

        </section>
    </div>
</div>
{% endblock %}