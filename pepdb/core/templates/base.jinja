<!DOCTYPE html>
<html lang="{{ LANGUAGE_CODE }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>PEP: {% block page_title %}{{ root_page.translated_title }}{% endblock %}</title>

    {% if not disable_css %}
    {% stylesheet 'css_all' %}
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700,100&subset=latin,cyrillic-ext,cyrillic' rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css' />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel='stylesheet' type='text/css' />
    {% endif %}

    {% stylesheet 'css_print' %}
</head>

{% set calling_page = page.url if page else "" %}

<body class="{% block body_class %}not-front{% endblock %}"> 
    <div id="wrapper">
        <nav id="navbar" class="navbar navbar-inverse navbar-default" role="navigation">  
            <div class="container"> 
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">{{ _("Перемкнути :)") }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url("wagtail_serve", "") }}">PEP.org.ua</a>
                </div>

                <div class="collapse navbar-collapse navbar-ex1-collapse pull-left">
                    <ul class="nav navbar-nav">
                        {% for menuitem in top_menu %}
                            <li class="{% if calling_page.startswith(menuitem.link) %} active{% endif %}">
                                <a href="{{ menuitem.link }}">{{ menuitem.translated_caption }}</a>
                            </li>
                        {% endfor %}
                        {% block extra_menu %}
                        {% endblock %}
                    </ul>
                </div>

                {% block mini_search %}
                <div class="col-xs-6 col-sm-6 col-md-3 pull-right regularSearch">
                    <form id="pep-search" action="{{ url("search") }}" method="GET">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="" name="q" data-provide="typeahead" id="search-form" autocomplete="off" data-endpoint="{{ url("suggest") }}" />
                            <input type="hidden" name="is_exact" value="" />
                            <span class="input-group-btn"><button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-search"></i></button></span>
                        </div>
                    </form>
                </div>
                {% endblock %}

                <div id="languageSelect" class="dropdown asSelect">
                    <button class="dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <span class="btn-text"><img src="{{ static("images/" + LANGUAGE_CODE + ".png") }}" /></span>                        
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu">
                        {% for lang in LANGUAGES %}
                        <li>
                            <form action="{{ url("set_language") }}" method="POST">
                                {% csrf_token %}
                                {% if request.path.startswith("/" + LANGUAGE_CODE + "/") %}
                                    <input type="hidden" name="next" value="{{ request.path.replace("/" + LANGUAGE_CODE + "/", "/" + lang.0 + "/", 1) }}" />
                                {% else %}
                                    <input type="hidden" name="next" value="/" />
                                {% endif %}
                                <input type="hidden" name="language" value="{{ lang.0 }}" />
                                <button><img src="{{ static("images/" + lang[0] + ".png") }}" /></button>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page">
        {% block content %}
        {% endblock %}
        </div> <!--page -->

        <footer id="footer">
            <div class="container">
                <table width="100%">
                    <tr>
                        <td>
                            <ul>
                                {% for menuitem in bottom_menu %}
                                    <li class="{% if calling_page.startswith(menuitem.link) %} active{% endif %}">
                                        <a href="{{ menuitem.link }}">{{ menuitem.translated_caption }}</a>
                                    </li>
                                {% endfor %}
                                <!-- <li><a href="#"><i class="fa fa-rss"></i> Updates</a></li> -->
                                <li>Copyright 2015</li>
                            </ul>
                        </td>
                        <td>
                            <div id="footerInfo" class="hidden-xs text-justify">{{ root_page.translated_footer|richtext }}</div>
                        </td>
                    </tr>
                </table>
            </div>
        </footer>
    </div>
    {% javascript 'js_all' %}
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-69691110-1', 'auto');
      ga('send', 'pageview');

    </script>
</body>
</html>