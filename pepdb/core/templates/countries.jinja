{% extends "base.jinja" %}
{% from "macros/_pagination.jinja" import render_pagination with context %}
{% from "macros/_search.jinja" import render_person with context %}

{% block content %}
    <div class="container">
        <div class="row">

            <div id="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="{{ url("wagtail_serve", "") }}">{{ _("Головна") }}</a></li>
                    <li class="active">{{ _("Результати пошуку") }}</li>
                    <li class="active">{{ _("Публічні діячі") }}</li>
                </ol>
            </div>

            <section id="search-by-country">
                <h1>{{ _("Пошук по країнам") }}</h1>
                <div class="dropdown as-select">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        {% if country %}{{ country.name }}{% else %}{{ _("Усі країни") }}{% endif %}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu">
                        <li><a href="{{ url("countries") }}">{{ _("Усі країни") }}</a></li>
                        <li role="separator" class="divider"></li>
                        {% for cntry in used_countries %}
                            <li><a href="{{ url("countries", country_id=cntry.iso2) }}">{{ cntry.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>

                <br><br> <!--TODO -->

                 <div class="pep-tab" data-example-id="togglable-tabs">
                    <ul id="myTabs" class="nav nav-tabs" role="tablist">
                        {% if persons %}
                            <li role="presentation" class="active">
                                <a href="#f" id="fiziki" role="tab" data-toggle="tab" aria-controls="fiziki"
                                   aria-expanded="true">{{ _("Фізичні особи") }} <span class="badge">{{ persons.paginator.count }}</span></a>
                            </li>
                        {% endif %}
                        {% if related_persons %} <!-- TODO: change to yuriki -->
                            <li role="presentation" class="">
                                <a href="#y" role="tab" id="yuriki" data-toggle="tab" aria-controls="profile"
                                   aria-expanded="false">{{ _("Юридичні особи") }} <span class="badge">8</span></a>
                            </li>
                        {% endif %}
                    </ul>
                    <div id="pepTabContant" class="tab-content">
                        {% if persons %}
                            <div role="tabpanel" class="tab-pane fade active in" id="fiziki" aria-labelledby="fiziki">
                                 {% for p in persons %}
                                    {{ render_person(p, include_related_persons=False) }}
                                    {% if loop.index is divisibleby 2 %}
                                        <div class="clearfix"></div>
                                    {% endif %}
                                {% endfor %}

                                {% if persons.paginator.num_pages > 1 %}
                                    <div class="text-center">
                                        <nav>
                                            {{ render_pagination(persons, "") }}
                                        </nav>
                                    </div>
                                {% endif %}
 
                            </div>
                        {% endif %}
                        {% if related_persons %} <!-- TODO: change to fiziki -->
                            <div role="tabpanel" class="tab-pane fade" id="yuriki" aria-labelledby="yuriki">
{#
                                {% for p in related_persons %}
                                    {{ render_person(p) }}
                                    {% if loop.index is divisibleby 2 %}
                                        <div class="clearfix"></div>
                                    {% endif %}
                                {% endfor %}

                                {% if related_persons.paginator.num_pages > 1 %}
                                    <div class="text-center">
                                        <nav>
                                            {{ render_pagination(related_persons, url("search_related")) }}
                                        </nav>
                                    </div>
                                {% endif %}
 #}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}